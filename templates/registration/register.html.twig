{#{% extends 'base.html.twig' %}#}
<link rel="stylesheet" href="{{ asset('css/style.css') }}">
{#{% block title %}Formulaire d'enregistrement{% endblock %}#}

{% block body %}
    {{ form_start(registrationForm) }}
    <div class="box">
        <h1>Formulaire d'enregistrement</h1>
        <table align="center">
            <tr>
                <td>
                    {{ form_row(registrationForm.nom, {'attr':{'class':'form-control'}}) }}</td>
                <td> {{ form_row(registrationForm.prenom, {'attr':{'class':'form-control'}}) }}</td>
            </tr>
            <tr><td colspan="2">{{ form_row(registrationForm.email, {'label' : 'Adresse électronique','attr':{'class':'form-control'}}) }}</td></tr>
            <tr>
            <td>{{ form_row(registrationForm.plainPassword.first, {'label' : 'Créez votre mot de passe','attr':{'class':'form-control'}}) }}</td>
            <td> {{ form_row(registrationForm.plainPassword.second, {'label' : 'Confirmez votre mot de passe','attr':{'class':'form-control'}}) }}</td>
            </tr>
        </table>

        {{ form_row(registrationForm.agreeTerms, {'attr':{'class':'form-control'}}) }}


        <button type="submit">
            S'enregistrer
        </button>
    </div>
    {{ form_end(registrationForm) }}

{% endblock %}
